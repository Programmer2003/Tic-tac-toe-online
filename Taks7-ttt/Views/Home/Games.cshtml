@{
    ViewData["Title"] = "Games";
}

@section css{
    <link href="~/css/css.css" rel="stylesheet" />
    <link href="~/css/letter.css" rel="stylesheet" />
    <link href="~/css/ttt.css" rel="stylesheet" />
}

